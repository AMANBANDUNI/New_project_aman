<p id="notice"><%= notice %></p>

<h1>Products</h1>

<form name="myform" class="form" action="" >
  <table>
    <thead>
      <tr>
        <th><%= check_box_tag "products[]" %></th>
        <th>Name</th>
        <th>Color</th>
        <th>Description</th>
        <th>Price</th>
        <th>Image url</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <% if product.deleted? %>
          <tr class="deleted" >
        <% else %>
          <tr >
        <% end %>

          <td id="product.id"><%= check_box_tag "products[]", product.id %></td>
          <td><%= product.name %></td>
          <td><%= product.color %></td>
          <td><%= product.description %></td>
          <td><%= product.price %></td>
          <td><%= product.image_url %></td>
          <td><%= link_to 'Show', product %></td>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><%= link_to 'SoftDelete', "/soft-delete/#{product.id}" %></td>
          <td><%= link_to 'Undelete', "/un-delete/#{product.id}" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    
  </div>
</form>
<br>

